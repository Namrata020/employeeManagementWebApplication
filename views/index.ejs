<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <header>
        <h1>Employee Management System</h1>
    </header>
    <div>
        <form action="/addemp">
            <button type="submit" name="add" id="add" value="add">Add new Employee</button>
        </form>
        <table border="3" style="height:50px;width:50px;">
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Salary</th>
                <th>action</th>
            </tr>
            <%for(var i=0;i<empdata.length;i++){%>
                <tr>
                    <td><%=empdata[i].emp_id%></td>
                    <td><%=empdata[i].empn%></td>
                    <td><%=empdata[i].age%></td>
                    <td><%=empdata[i].salary%></td>
                    <td><a href="/deleteemp/<%=empdata[i].emp_id%>">Delete</a></td>
                </tr>
                <%}%>
        </table> 
    </div>
</body>
</html>